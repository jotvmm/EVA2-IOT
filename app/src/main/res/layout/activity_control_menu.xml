<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/control_menu"
    tools:context=".ControlMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TÍTULO -->
        <TextView
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="CONTROL DE SISTEMA RETROCESO"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <!-- ESTADO DE CONEXIÓN -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Desconectado"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingBottom="30dp"
            android:textStyle="bold"/>

        <EditText
            android:gravity="center"
            android:textColor="#FFFFF"
            android:id="@+id/et_server_ip"
            android:hint="IP del servidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <!-- BOTÓN DE CONEXIÓN -->
        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONECTAR BLUETOOTH"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <!-- BOTÓN DE DESCONEXIÓN -->
        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCONECTAR"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"/>

        <!-- BOTÓN 1: ACTIVAR SISTEMA (Comando '1') -->
        <Button
            android:id="@+id/toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVAR SISTEMA"
            android:textSize="30sp"/>

        <!-- BOTÓN 2: DESACTIVAR SISTEMA (Comando '0') -->
        <Button
            android:id="@+id/toggle2_btn"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESACTIVAR SISTEMA"
            android:textSize="25sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>